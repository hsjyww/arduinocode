// LED가 자동으로 밝아졌다가 어두워지는 코드
#include <Arduino.h>
int ledPin = 9;    // PWM 출력 핀
int brightness = 0; // 밝기 (0~255)
int fadeAmount = 5; // 한 번에 바뀌는 밝기 값

void setup() {
  pinMode(ledPin, OUTPUT);
}

void loop() {
  analogWrite(ledPin, brightness);  // 밝기 설정

  brightness = brightness + fadeAmount;  // 밝기 변화

  // 밝기가 0이거나 255를 넘으면 방향을 반대로
  if (brightness <= 0 || brightness >= 255) {
    fadeAmount = -fadeAmount;
  }

  delay(30);  // 천천히 변화되도록 딜레이 줌
}
