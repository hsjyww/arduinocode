#include <Arduino.h>

int ledPins[] = {2,3,4,5,6,7,8,9}; // LED 핀 배열
int ledCount = 8;

void setup() {
  for (int i = 0; i < ledCount; i++) {
    pinMode(ledPins[i], OUTPUT);
  }
}

void loop() {
  // 왼쪽에서 오른쪽으로 점등
  for (int i = 0; i < ledCount; i++) {
    digitalWrite(ledPins[i], HIGH);
    delay(200);
    digitalWrite(ledPins[i], LOW);
  }

  // 오른쪽에서 왼쪽으로 점등
  for (int i = ledCount - 1; i >= 0; i--) {
    digitalWrite(ledPins[i], HIGH);
    delay(200);
    digitalWrite(ledPins[i], LOW);
  }
}
