#include <Arduino.h>
int cdsPin = A0;     // 조도센서 연결 핀
int ledPin = 9;      // LED 연결 핀
int lightValue = 0;  // 밝기 값 저장 변수

void setup() {
  pinMode(ledPin, OUTPUT);
  Serial.begin(9600);  // 밝기값 확인용 (시리얼 모니터)
}

void loop() {
  lightValue = analogRead(cdsPin);  // 밝기 값 읽기
  Serial.println(lightValue);       // 시리얼로 출력

  if (lightValue < 500) {
    digitalWrite(ledPin, HIGH);     // 어두우면 켬
  } else {
    digitalWrite(ledPin, LOW);      // 밝으면 끔
  }

  delay(200);  // 너무 자주 깜빡이지 않도록 딜레이
}
